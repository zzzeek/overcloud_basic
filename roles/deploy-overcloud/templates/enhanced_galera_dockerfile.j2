FROM {{ galera_image }}

USER root

COPY galera  /usr/lib/ocf/resource.d/heartbeat/galera
COPY stretch_galera  /usr/lib/ocf/resource.d/heartbeat/stretch_galera


RUN \
    yum install -y openssh-clients && \
	chmod 755 /usr/lib/ocf/resource.d/heartbeat/galera && \
	chmod 755 /usr/lib/ocf/resource.d/heartbeat/stretch_galera

