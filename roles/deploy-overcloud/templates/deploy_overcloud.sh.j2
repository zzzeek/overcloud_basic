#!/bin/bash


# NOTE NOTE NOTE!
# if deploy fails w/ INTERNAL ERROR or json issues (see /var/log/heat/heat-
# engine.log), need to delete mistral workflow:
# https://bugs.launchpad.net/tripleo/+bug/1622720
# mistral environment-delete overcloud
# swift delete --all


openstack overcloud deploy \
    --templates {{ tripleo_heat_templates }} \
    --libvirt-type qemu \
    --timeout 90  \
    --stack overcloud \
    --control-flavor controller --compute-flavor compute \
    -e {{ tripleo_heat_templates }}/environments/config-debug.yaml  \
    -e {{ tripleo_heat_templates }}/environments/docker.yaml  \
    -e {{ tripleo_heat_templates }}/environments/docker-ha.yaml  \
    -e {{ tripleo_heat_templates }}/environments/docker-stretch-galera.yaml  \
    -e {{ working_dir }}/docker_registry.yaml  \
    -e {{ tripleo_heat_templates }}/environments/network-isolation.yaml \
    -e {{ working_dir }}/network-environment.yaml  \
    -e {{ tripleo_heat_templates }}/environments/low-memory-usage.yaml     \
    -e {{ tripleo_heat_templates }}/environments/disable-telemetry.yaml   \
    -e {{ working_dir }}/naming_things.yaml  \
    --validation-warnings-fatal   --compute-scale {{ compute_scale }} --control-scale {{ control_scale }}  \
    --ntp-server pool.ntp.org \
    ${DEPLOY_ENV_YAML:+-e $DEPLOY_ENV_YAML} "$@" && status_code=0 || status_code=$?


